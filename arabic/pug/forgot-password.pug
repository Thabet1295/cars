doctype html
html(lang="ar" dir="rtl")
    head
        block website_title
            title نسيت كلمة المورو
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(charset="utf-8")
        include ./include/style
    body
        div(class="contact-section")
            div(class="container")
                div(class="row login-box")
                    div(class="col-lg-6 align-self-center pad-0")
                        div(class="form-section clearfix")
                            div(class="logo-2 logo-3")
                                a(href="index.html")
                                    img(src="../assets/img/logos/black-logo.png", alt="logo")
                            h3 استرجاع كلمة المرور
                            div(class="clearfix")
                            form(action="#", method="GET")
                                div(class="form-group form-box clearfix")
                                    input(type="password", name="Password", class="input-text", placeholder="البريد الالكتروني")
                                div(class="form-group clearfix mb-0")
                                    button(type="submit", class="btn-md btn-theme btn-block") ارسال الي بريدك

                    div(class="col-lg-6 align-self-center pad-0 bg-img")
                        div(class="info clearfix")
                            div(class="logo-2")
                                a(href="index.html")
                                    img(src="../assets/img/logos/logo.png", alt="logo")
                            h3 مرحبا بكم
                            div(class="social-list")
                                a(href="#", class="facebook-bg")
                                    i(class="fa fa-facebook")
                                a(href="#", class="twitter-bg")
                                    i(class="fa fa-twitter")
                                a(href="#", class="google-bg")
                                    i(class="fa fa-google")
                                a(href="#", class="linkedin-bg")
                                    i(class="fa fa-linkedin")

                // Full Page Search
        #full-page-search
            button(type="button", class="close") ×
            form(action="index.html#")
                input(type="search", value="", placeholder="اكتب هنا  .....")
                button(type="submit", class="btn btn-sm button-theme") بحث
        include ./include/script        
